<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FerreteriaProMAX</title>
    <script src="https://kit.fontawesome.com/764228b13f.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_LoginPartial")
    @if (Session["id"] == null)
    {
        @RenderBody()
    }
    else if (!Session["id"].ToString().Equals("0"))
    {
    <div id="page-wrapper">
        @RenderBody()
    </div>
            <footer style="text-align:center">
                <b>&copy; @DateTime.Now.Year - Ferreteria ProMAX </b>
            </footer>

    }
    else
    {
        @RenderBody()
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
