                @Html.EditorFor(model => model.PrecioU, new { htmlAttributes = new { @class = "form-control", type = "number", required = "required" } })
                @Html.ValidationMessageFor(model => model.PrecioU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Nuevo" class="btn btn-primary" />
            </div>
