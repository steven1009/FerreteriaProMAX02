                @Html.EditorFor(model => model.Stok, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Stok, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("ID Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
